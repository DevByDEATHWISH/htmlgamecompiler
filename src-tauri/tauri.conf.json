{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "htmlgamecompiler",
  "version": "0.1.0",
  "identifier": "com.htmlgamecompiler.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "LAPLACE'S DEMON",
        "width": 1280,
        "height": 768,
        "devtools": false        
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-eval'; style-src 'self';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
